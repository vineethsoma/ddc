{
  "$schema": "./node_modules/@nrwl/schematics/src/schema.json",
  "project": {
    "name": "ddc",
    "npmScope": "ddc",
    "latestMigration": "20180424-add-tsconfig-tools"
  },
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "./tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "apps/customer-portal/src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "apps/customer-portal/e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "apps": [
    {
      "name": "customer-portal",
      "root": "apps/customer-portal/src",
      "outDir": "dist/apps/customer-portal",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "../../../test.js",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "../../../tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.scss"
      ],
      "scripts": [
        "../../../node_modules/jquery/dist/jquery.min.js",
        "../../../node_modules/popper.js/dist/umd/popper.js",
        "../../../node_modules/bootstrap/dist/js/bootstrap.min.js",
        "../../../node_modules/moment/moment.js",
        "../../../node_modules/fullcalendar/dist/fullcalendar.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      },
      "tags": []
    },
    {
      "name": "common/ui",
      "root": "libs/common/ui/src",
      "test": "../../../../test.js",
      "appRoot": "",
      "tags": []
    },
    {
      "name": "customer-portal/ui",
      "root": "libs/customer-portal/ui/src",
      "test": "../../../../test.js",
      "appRoot": "",
      "tags": [],
      "prefix": "ddc"
    },
    {
      "name": "scheduler",
      "root": "libs/scheduler/src",
      "test": "../../../test.js",
      "appRoot": "",
      "tags": []
    },
    {
      "name": "$workspaceRoot",
      "root": ".",
      "appRoot": ""
    }
  ],
  "defaults": {
    "schematics": {
      "collection": "@nrwl/schematics"
    },
    "styleExt": "scss",
    "component": {}
  },
  "warnings": {
    "typescriptMismatch": false
  }
}
